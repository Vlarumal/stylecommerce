{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "StyleCommerce": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=your-production-db-host;Database=your_production_database_name;Username=your_username;Password=${DB_PASSWORD}"
  },
  "JwtSettings": {
    "Secret": "${JWT_SECRET}",
    "Issuer": "YourApp.Api.Production",
    "Audience": "YourApp.Api.Users.Production",
    "ExpiryMinutes": 30
  },
  "SecuritySettings": {
    "AllowedCorsOrigins": [
      "https://yourapp.example.com"
    ]
  }
}